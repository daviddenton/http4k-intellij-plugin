<idea-plugin>
    <idea-version since-build="241"/>
    <id>http4k.project.wizard</id>
    <name>http4k Project Wizard</name>
    <vendor email="info@http4k.org" url="https://http4k.org">http4k</vendor>

    <change-notes><![CDATA[
      <ul>
        <li>1.0.0 - Fixed spacing of UI elements.</li>
        <li>0.0.2 - Update logos</li>
        <li>0.0.1 - Initial release</li>
      </ul>
    ]]>
    </change-notes>

    <description><![CDATA[
This plugin generates boilerplate <a href="https://http4k.org>http4k</a> based projects with ease by integrating a project wizard into IntelliJ IDEA. It streamlines the process of creating new
http4k projects by providing a user-friendly interface within the IDE and access to the <a href="https://toolbox.http4k.org>http4k Toolbox</a>>.
    ]]></description>

    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.gradle</depends>

    <extensions defaultExtensionNs="com.intellij">
        <moduleBuilder builderClass="org.http4k.intellij.Http4kModuleBuilder"/>
    </extensions>
</idea-plugin>
